      <hr>

      <div class="footer">
        <p>&copy; SlipPay <%= Time.now.year %> <span class="pull-right"><a href="/">home</a></span></p>
      </div>

    </div> <!-- /container -->

    <%= javascript_include_tag "application" %>
  </body>
</html>
